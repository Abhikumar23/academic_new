{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "controllers/**",
          "database/**",
          "middleware/**",
          "model/**",
          "routes/**",
          "utils/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "index.js" }
  ]
}